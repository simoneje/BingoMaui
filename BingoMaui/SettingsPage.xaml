<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingoMaui.SettingsPage"
             Title="Inställningar">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Inställningar" FontAttributes="Bold" FontSize="24"/>

        <Button Text="Profilinställningar"
                Clicked="OnProfileSettingsClicked"
                BackgroundColor="Blue"
                TextColor="White"/>

        <Button Text="Logga ut"
                Clicked="OnLogoutClicked"
                BackgroundColor="Red"
                TextColor="White"/>
    </StackLayout>

</ContentPage>