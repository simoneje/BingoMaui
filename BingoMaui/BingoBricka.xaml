<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingoMaui.BingoBricka"
             Title="Bingobricka">
    <Grid RowSpacing="10" ColumnSpacing="10" Padding="10">
        <!-- Bingobrickan -->
        <Grid x:Name="BingoGrid"
              RowSpacing="5"
              ColumnSpacing="5"
              Padding="10"
              Margin="0,0,0,50">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
        </Grid>

        <!-- Knapp fÃ¶r att visa kommentarer -->
        <Button x:Name="ToggleCommentsButton"
                Text="Visa kommentarer"
                CommandParameter="{Binding GameId}" 
                Clicked="OnToggleCommentsClicked"
                VerticalOptions="End"
                HorizontalOptions="Center"
                BackgroundColor="Gray"
                TextColor="White"
                Padding="10"
                Margin="0,0,0,10"/>
    </Grid>
</ContentPage>
