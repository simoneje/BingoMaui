<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BingoMaui.Leaderboard"
             Title="Leaderboard">

    <CollectionView x:Name="LeaderboardCollectionView"
                    SelectionMode="Single"
                    SelectionChanged="OnPlayerSelected">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="8" Padding="10" CornerRadius="10" HasShadow="True">
                    <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">

                        <!-- Badge -->
                        <Label Text="{Binding RankEmoji}"
                               FontSize="24"
                               VerticalOptions="Center"
                               Margin="5" />

                        <!-- Nickname + points -->
                        <StackLayout Grid.Column="1" Spacing="2">
                            <Label Text="{Binding Nickname}"
                                   FontSize="18"
                                   FontAttributes="Bold" />
                            <Label Text="{Binding PointsText}"
                                   FontSize="14"
                                   TextColor="Gray" />
                        </StackLayout>

                        <!-- Color dot -->
                        <BoxView Grid.Column="2"
                                 WidthRequest="20"
                                 HeightRequest="20"
                                 CornerRadius="10"
                                 BackgroundColor="{Binding PlayerColor}"
                                 VerticalOptions="Center"
                                 HorizontalOptions="End" />
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
