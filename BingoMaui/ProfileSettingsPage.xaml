<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="BingoMaui.ProfileSettingsPage"
    Title="Profilinst채llningar">

    <StackLayout Padding="20" Spacing="10">
        <!-- Anv채ndarnamn -->
        <Label Text="Ditt anv채ndarnamn" FontAttributes="Bold" FontSize="18"/>
        <Entry x:Name="NicknameEntry" Placeholder="Ange nytt anv채ndarnamn"/>

        <!-- Colorpicker -->
        <CollectionView x:Name="ColorPickerCollectionView" SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="4"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Button BackgroundColor="{Binding}" 
                    CornerRadius="25" 
                    HeightRequest="50" 
                    WidthRequest="50" 
                    Margin="5"
                    Clicked="OnColorButtonClicked"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Spara-knapp -->
        <Button Text="Spara" Clicked="OnSaveClicked" BackgroundColor="Green" TextColor="White"/>

    </StackLayout>
</ContentPage>
